#my aliases
# git
alias gitcommands='less /home/chas/develop/github/programmers-cheat-sheets/040_git/git_commands'
alias gs='git status'
alias ga='git add $*'
alias gaa='git add -A'
alias gpl_origin_develop='git pull origin develop'
alias gps_origin_develop='git push origin develop'
alias gc='git commit $*'
alias gca='git commit -a $*'
alias gcm='git commit -m $*'
alias gcam='git commit -am $*'
alias gch='git checkout $*'
alias gchf='git checkout -f'
alias gbr='git branch'
alias gl='git log'
alias glpo='git log --pretty=oneline'
alias glpon='git log --pretty=oneline -n $*'

# cd
