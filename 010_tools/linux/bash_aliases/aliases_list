# ~/.bashrc

#my aliases
# git
alias git_commands='less /home/chas/develop/github/programmers-cheat-sheets/040_git/git_commands'
alias gs='git status'
alias ga='git add $*'
alias gaa='git add -A'
alias gpl='git pull'
alias gps='git push'
alias gc='git commit $*'
alias gca='git commit -a $*'
alias gcm='git commit -m $*'
alias gcam='git commit -am $*'
alias gch='git checkout $*'
alias gchf='git checkout -f'
alias gbr='git branch'
alias gl='git log'
alias glpo='git log --pretty=oneline'
alias glpon='git log --pretty=oneline -n $*'

# cd
alias cd_develop='cd ~/develop/'
alias cd_github='cd ~/develop/github/'
alias cd_programmers_cheat_sheets='cd ~/develop/github/programmers-cheat-sheets/'

# show file
alias t_etc_bash_bashrc='tail -n 45 /etc/bash.bashrc'
alias t_home_bashrc='tail -n 45 /etc/bash.bashrc'
alias c_12='sudo cat ~/Документы/3/12'
alias c_git_commands='cat /home/ch/develop/github/programmers-cheat-sheets/040_git/git_commands'
alias c_linux_commands='cat /home/ch/develop/github/programmers-cheat-sheets/030_sysadmin/Linux/linux_commands'

# edit file
alias n_aliases_list='nano /home/ch/develop/github/programmers-cheat-sheets/010_tools/linux/bash_aliases/aliases_list'
alias n_etc_bash_bashrc='sudo nano /etc/bash.bashrc'
alias n_home_bashrc='sudo nano /etc/bash.bashrc'

# other
alias h='history'
alias c='clear'
alias up='sudo apt update && sudo apt upgrade'